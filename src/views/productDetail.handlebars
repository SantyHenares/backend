<section class="d-flex justify-content-center mt-5">
  <div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-primary">{{genre}}</strong>
        <h3 class="mb-0 text-dark">{{title}}</h3>
        <div class="mt-auto text-muted">AÃ±o: {{year}}</div>
        <p class="card-text m-auto">{{description}}</p>
        <h3 class="mb-auto">${{price}}</h3>
        <form action="../api/carts/{{req.user.cart._id}}/product/{{_id}}" method="POST">
          <input type="hidden" name="pid" value={{_id}}>
          <button type="submit" class="btn btn-outline-secondary my-2">Agregar al carrito</button>
        </form>
        <a href="/products">Ir a productos</a>
      </div>
      <img class="card-img-right flex-auto d-none d-md-block" src={{image}} alt="Card image cap">
    </div>
  </div>
</section>